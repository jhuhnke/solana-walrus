{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*", "trial.ts"], 
    "exclude": ["node_modules", "dist"]
}
